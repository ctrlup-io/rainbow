{
  "name": "rainbow-react",
  "version": "0.1.0",
  "private": false,
  "description": "Rainbow React, Ctrl Up Design System",
  "repository": "git@github.com:ctrlup-io/rainbow-react.git",
  "license": "MIT",
  "author": "Valentin Barit <valentin.barit@gmail.com>",
  "type": "module",
  "module": "dist/index.js",
  "source": "src/index.js",
  "scripts": {
    "build": "rimraf dist && parcel build",
    "commit": "git-cz",
    "format": "prettier --write {*,src/**/*}.{js,json,md}",
    "lint": "eslint --cache ."
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,json,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@parcel/reporter-bundle-analyzer": "^2.2.0",
    "babel-loader": "^8.2.3",
    "eslint": "^8.6.0",
    "eslint-config-react-app": "^7.0.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "parcel": "^2.2.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.53.1"
  }
}
